# Simple Dockerfile for Auction Hub backend
FROM node:18-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm ci

# Copy the entire workspace
COPY . .


# Generate Prisma client
WORKDIR /app/server
RUN npx prisma generate



# Build the application
WORKDIR /app
RUN npx nx build server --prod

# Copy generated Prisma client to node_modules/@prisma/client
RUN mkdir -p /app/node_modules/@prisma/client && cp -r /app/server/generated/* /app/node_modules/@prisma/client/

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=production

# Start the application
CMD ["node", "dist/server/main.js"]
