DATABASE_URL=
REDIS_URL=

NODE_ENV=
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Alternative SMTP Configuration (if you prefer SMTP over API)
# EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@auctionhub.com

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase JWT Secret (for verifying Supabase access tokens)
# Get this from your Supabase project: Settings > API > JWT Settings > JWT Secret
SUPABASE_JWT_SECRET=your_supabase_jwt_secret


# Authentication Mode Configuration
# Options: 'jwt', 'test', 'disabled'
# - jwt: Full JWT authentication (production mode)
# - test: Allow x-test-user-id header for testing (bypasses JWT)
# - disabled: No authentication required (development only)
AUTH_MODE=jwt

# Test User Configuration (when AUTH_MODE=test)
# If not provided, x-test-user-id header must be sent with each request
# If provided, this user ID will be used for all requests automatically
TEST_USER_ID=uuid from prisma studio

# Test User Role (when AUTH_MODE=test)
# Options: 'user', 'auctioneer', 'admin', 'super_admin'
TEST_USER_ROLE=user

STRIPE_SECRET_KEY=
FRONTEND_URL=
NX_CACHE_DIRECTORY=

CLOUDINARY_FOLDER=
CLOUDINARY_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
